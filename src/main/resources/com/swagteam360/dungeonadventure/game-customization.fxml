<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.swagteam360.dungeonadventure.controller.StartMenuController">
   <children>
      <Label layoutX="216.0" layoutY="27.0" prefHeight="23.0" prefWidth="172.0" text="Enter Your Hero Name">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <TextField layoutX="221.0" layoutY="74.0" promptText="Enter Hero Name Here" />
      <Label layoutX="234.0" layoutY="127.0" text="Choose your Hero">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <Label layoutX="221.0" layoutY="217.0" text="Select Difficulty Level">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <RadioButton layoutX="268.0" layoutY="285.0" mnemonicParsing="false" selected="true" text="Normal">
         <toggleGroup>
            <ToggleGroup fx:id="DifficultyButtons" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="268.0" layoutY="259.0" mnemonicParsing="false" text="Easy" toggleGroup="$DifficultyButtons" />
