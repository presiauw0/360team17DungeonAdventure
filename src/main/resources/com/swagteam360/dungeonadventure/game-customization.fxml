          <MenuItem mnemonicParsing="false" onAction="#aboutUsMenuEvent" text="About Us" />
        </items>
      </MenuButton>
      <RadioButton layoutX="269.0" layoutY="175.0" mnemonicParsing="false" selected="true" text="Warrior">
         <toggleGroup>
            <ToggleGroup fx:id="HeroButtons" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="175.0" layoutY="175.0" mnemonicParsing="false" text="Thief" toggleGroup="$HeroButtons" />
      <RadioButton layoutX="370.0" layoutY="175.0" mnemonicParsing="false" text="Priestess" toggleGroup="$HeroButtons" />
   </children>
</AnchorPane>
